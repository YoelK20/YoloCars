<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Car E-Commerce</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }

    .navbar {
      margin-bottom: 20px;
    }

    .card img {
      max-height: 200px;
      object-fit: cover;
      width: 400px;
    }

    .footer {
      background-color: #343a40;
      color: white;
      text-align: center;
      padding: 10px 0;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="#">Car Shop</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/destroy">Log Out ?</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <!-- Product Card -->
      
      <% carList.forEach(el => { %>
        <form action="/buy" method="post">
          <div class="col-md-4">
            <div class="card">
              <img src="<%= el.imageUrl %>" class="card-img-top" alt="Car 1">
              <div class="card-body">
                <h5 class="card-title"><%= `${el.brand} ${el.model}` %></h5>
                <p class="card-text"><%= currency(el.price) %></p>
                <input type="hidden" name="carId" value="<%= el.id %>">
                <button class="btn btn-primary" type="submit">Buy Now</button>
              </div>
            </div>
          </div>
        </form>
         <% }) %>
      
      <!-- Additional Product Cards... -->
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <p>Â© 2024 Car Shop. All rights reserved.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
