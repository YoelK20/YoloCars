<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yolo Market</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      margin: 0;
      height: 100vh;
      width: 100%;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #343a40;
      background-color: #343a40;
    }

    .main {
      padding: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      max-width: 800px;
      padding: 40px;
      border-radius: 20px;
      background-color: rgb(240, 248, 255);
      font-family: sans-serif;
      font-weight: 700;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .image-container {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
    
    }

    .form-container {
      flex: 1;
      padding-left: 20px;
    }

    .title {
      text-align: center;
      font-size: 28px;
      letter-spacing: 2px;
      margin-bottom: 35px;
    }

    .credentials input {
      width: 100%;
      border: none;
      outline: none;
      background: none;
      font-size: 18px;
      padding: 10px 0;
      border-bottom: 2px solid #c2c4c3;
      margin-bottom: 20px;
      transition: border-bottom 0.3s ease;
    }

    .credentials input:focus {
      border-bottom: 2px solid #343a40;
    }

    .submit {
      width: 100%;
      height: 40px;
      border-radius: 20px;
      color: #fff;
      font-size: 15px;
      font-weight: 500;
      text-align: center;
      background-color: #343a40;
      border: none;
      margin-top: 20px;
      transition: background-color 0.3s ease;
    }

    .submit:hover {
      background-color: #343a404d;
      color: black;
    }

    .login1 {
      margin-top: 20px;
      text-align: center;
    }

    .login {
      color: #6c757d;
      text-decoration: none;
      font-weight: bold;
    }

    .login:hover {
      text-decoration: underline;

    }
    
    .logo {
      max-width: 150%;
      max-height: 400px;
      align-items: center;
      padding-left: 70px;
      padding-top: 0px;
    }
  </style>
</head>
<body>
  <div class="main">
    <div class="image-container">
      <img src="http://localhost:3000/Logo.png" alt="Logo" class="logo">
    </div>
    <div class="form-container">
      <!-- <div class="title">Yolo Market</div> -->
      <form action="/register" method="post">
        <div class="credentials">
          <div>
            Name : 
          <input type="text" name="fullName" autocomplete="off" class="form-control" placeholder="Type your fullname here">
          </div>

          <div>
            Gender :
            <% gender.forEach(el => { %>
             <input type="radio" name="gender" value="<%= el %>"><%= el %>
            <% }) %>
          </div>

          <div>
            Address:
          <input type="text" name="address" autocomplete="off" class="form-control" placeholder="Type your address here">
          </div>

          <div>
            Phone Number:
          <input type="text" name="phoneNumber" autocomplete="off" class="form-control" placeholder="Type your phone number here">
          </div>

          <div>
            Email:
           <input type="text" name="email" autocomplete="off" class="form-control" placeholder="Type your email here">
        </div>
        <div>
            Password: 
          <input type="password" name="password" autocomplete="off" class="form-control" placeholder="Type your new password here">
        </div>
  
          </div>
  
          <button type="submit" class="submit btn btn-primary">Submit</button>
          <div>
            <p class="login1">Already have an account?? <a href="/login" class="login">Login</a></p>
          </div>
        </form>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
  </body>
  </html>